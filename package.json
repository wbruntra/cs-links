{
  "name": "cs-linker",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "node ./bin/www",
    "dev:db": "cd devdb && docker-compose up",
    "dev": "nodemon ./bin/www",
    "dev:client": "cd client-vite && npm run dev",
    "test": "NODE_ENV=testing node tester.js",
    "mocha": "NODE_ENV=testing mocha --exit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "migrate": "node_modules/.bin/knex migrate:latest",
    "migrate:rollback": "node_modules/.bin/knex migrate:rollback",
    "update:check": "npm outdated",
    "update:safe": "npm update",
    "update:latest": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "debug": "~4.4.1",
    "dotenv": "^17.2.0",
    "express": "~5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "knex": "^3.1.0",
    "mariadb": "^3.4.4",
    "morgan": "~1.10.0",
    "mysql2": "^3.14.2",
    "randomstring": "^1.3.1",
    "url-parse": "^1.5.10",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "chai": "^5.2.1",
    "chai-http": "^5.1.2",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.1"
  }
}
